{
  "name": "ai-support-widget",
  "version": "1.0.0",
  "description": "An intelligent customer support widget built with React and FastAPI",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "build:watch": "vite build --watch",
    "build:analyze": "vite build --mode analyze",
    "serve": "vite preview --port 4173",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "keywords": [
    "ai",
    "support",
    "widget",
    "customer-service",
    "chat",
    "react",
    "fastapi",
    "embeddable"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ai-support-widget.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ai-support-widget/issues"
  },
  "homepage": "https://github.com/yourusername/ai-support-widget#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "files": [
    "dist",
    "public",
    "README.md"
  ],
  "main": "./dist/widget.umd.js",
  "module": "./dist/widget.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/widget.es.js",
      "require": "./dist/widget.umd.js"
    },
    "./embed": "./public/embed.js",
    "./package.json": "./package.json"
  },
  "sideEffects": [
    "**/*.css"
  ]
}
